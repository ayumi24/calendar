<h1>記録</h1>
<p>記録を習慣化していきましょう！</p>
<%= form_with(model: @memo, local: true) do |f| %>

<div class="title">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="content">
  <%= f.label :content %>
  <%= f.text_field :content %>
</div>

<div class="time">
  <%= f.label :start_time %>
  <%= f.datetime_select :start_time %>
</div>

<div class="submit">
  <%= f.submit "記録を作成", class: "btn btn-success" %>
</div>

<% end %>
